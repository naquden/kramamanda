<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_item_min_height"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardBackgroundColor="@color/card_background"
    android:layout_marginTop="@dimen/card_item_margin_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/hug_item_date_container"
            android:layout_width="@dimen/card_item_date_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/card_padding"
            android:background="@color/card_date_background">
            <TextView
                android:id="@+id/hug_item_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardDate"/>
            <TextView
                android:id="@+id/hug_item_date_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardDate"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/hug_item_date_container">
            <TextView
                android:id="@+id/hug_item_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/hug_item_image_container"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                style="@style/CardMessage"/>
            <FrameLayout
                android:id="@+id/hug_item_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/hug_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ProgressBar
                    android:id="@+id/hug_item_image_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.ProgressBar"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>