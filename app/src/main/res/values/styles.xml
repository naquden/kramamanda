<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="CardMessage" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginStart">@dimen/card_item_message_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_item_message_margin_horizontal</item>
    </style>

    <style name="CardDate" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/card_date_foreground</item>
    </style>

    <style name="BannerMessage" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/banner_message_foreground</item>
        <item name="android:layout_marginBottom">@dimen/banner_text_margin</item>
        <item name="android:layout_marginStart">@dimen/banner_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/banner_text_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BannerDate" parent="CardDate">
        <item name="android:textColor">@color/banner_date_foreground</item>
        <item name="android:layout_marginTop">@dimen/banner_text_margin</item>
        <item name="android:layout_marginStart">@dimen/banner_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/banner_text_margin</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
